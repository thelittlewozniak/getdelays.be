<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Getdelays</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/Visiility.js"></script>
    <script src="~/Scripts/ListStation.js"></script>
    <script src="~/Scripts/ListConnection.js"></script>
    <script src="~/Scripts/latinise.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        @Html.ActionLink("GetDelays", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation" style="">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    @Html.ActionLink("See per stations", "SearchStation", "Station"/*, new { @class = "nav-link" }*/)
                </li>
                <li class="nav-item">
                    @Html.ActionLink("See Connection", "SearchConnection", "Connection", new { @class = "nav-link" })
                </li>
                @if (Session["user"] == null)
                {
                    <li class="nav-item">
                        @Html.ActionLink("Log in", "ConnectionPage", "User", new { @class = "nav-link" })
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        @Html.ActionLink("Profile", "Index", "User", new { @class = "nav-link" })

                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Log off", "Disconnect", "User", new { @class = "nav-link" })
                    </li>
                }
            </ul>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <br /><a href='javascript:history.go(-1)'>Go Back to Previous Page</a>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year Nathan Pire- GetDelays</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>